<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"> <TextView
        android:id="@+id/textViewReportId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回報 ID: #ABCDEFG"
        android:textSize="12sp"
        android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textViewReporterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="回報人: 張三"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textViewDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="時間: 2024/06/15 14:30"
            android:textSize="14sp"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="地點: 台北車站南側"
            android:textSize="14sp"
            android:textColor="#0000FF" />

        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="描述: 列車出軌，無人傷亡，已處理。"
            android:textSize="14sp"
            android:textColor="#0000FF" />

    </LinearLayout>
</androidx.cardview.widget.CardView>