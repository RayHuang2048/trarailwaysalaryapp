<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/personnelTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人員類型:"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/personnelTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/personnelTypeLabel"
            app:layout_constraintTop_toTopOf="@id/personnelTypeLabel"
            app:layout_constraintBottom_toBottomOf="@id/personnelTypeLabel"/>

        <TextView
            android:id="@+id/officerPositionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="職員職位:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/personnelTypeSpinner" />

        <Spinner
            android:id="@+id/officerPositionSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/officerPositionLabel"
            app:layout_constraintTop_toTopOf="@id/officerPositionLabel"
            app:layout_constraintBottom_toBottomOf="@id/officerPositionLabel"/>

        <TextView
            android:id="@+id/operatingPositionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="營運人員職位:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/officerPositionSpinner" />

        <Spinner
            android:id="@+id/operatingPositionSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/operatingPositionLabel"
            app:layout_constraintTop_toTopOf="@id/operatingPositionLabel"
            app:layout_constraintBottom_toBottomOf="@id/operatingPositionLabel"/>

        <TextView
            android:id="@+id/employeePositionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="從業人員職位:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/operatingPositionSpinner" />

        <Spinner
            android:id="@+id/employeePositionSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/employeePositionLabel"
            app:layout_constraintTop_toTopOf="@id/employeePositionLabel"
            app:layout_constraintBottom_toBottomOf="@id/employeePositionLabel"/>

        <TextView
            android:id="@+id/gradeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="薪點:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/employeePositionSpinner" />

        <EditText
            android:id="@+id/gradeEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="輸入薪點"
            android:inputType="number"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gradeLabel"
            app:layout_constraintTop_toTopOf="@id/gradeLabel"
            app:layout_constraintBottom_toBottomOf="@id/gradeLabel"/>

        <TextView
            android:id="@+id/shiftTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="班別類型:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gradeEditText" />

        <Spinner
            android:id="@+id/shiftTypeSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/shiftTypeLabel"
            app:layout_constraintTop_toTopOf="@id/shiftTypeLabel"
            app:layout_constraintBottom_toBottomOf="@id/shiftTypeLabel"/>

        <TextView
            android:id="@+id/overtimeABLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB班加班時數:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shiftTypeSpinner" />

        <EditText
            android:id="@+id/overtimeHoursAB133EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="1.33倍時數"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overtimeABLabel"/>

        <EditText
            android:id="@+id/overtimeHoursAB166EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="1.66倍時數"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overtimeHoursAB133EditText"/>

        <EditText
            android:id="@+id/holidayHoursABEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="假日加班時數"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overtimeHoursAB166EditText"/>

        <TextView
            android:id="@+id/overtimeThreeShiftLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="三班制加班時數:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/holidayHoursABEditText" />

        <EditText
            android:id="@+id/overtimeHoursThreeShift134EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="1.34倍時數"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overtimeThreeShiftLabel"/>

        <EditText
            android:id="@+id/overtimeHoursThreeShift167EditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="1.67倍時數"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overtimeHoursThreeShift134EditText"/>

        <TextView
            android:id="@+id/nightShiftLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜點費資訊:"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/overtimeHoursThreeShift167EditText" />

        <EditText
            android:id="@+id/dayShiftDaysEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="白班天數"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nightShiftLabel"/>

        <EditText
            android:id="@+id/nightShiftDaysEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="夜班天數"
            android:inputType="number"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dayShiftDaysEditText"/>

        <EditText
            android:id="@+id/nightShiftAllowancePerDayEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="單日夜點費"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nightShiftDaysEditText"/>

        <Button
            android:id="@+id/calculateButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="計算月薪"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nightShiftAllowancePerDayEditText"/>

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="計算結果將顯示在此"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/calculateButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>